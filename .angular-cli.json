{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "website"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico",
        "favicon.png"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
          "bootstrap.css",
          "../node_modules/video.js/dist/video-js.min.css",
          "../node_modules/videojs-ima/dist/videojs.ima.css",          
          "../node_modules/font-awesome/css/font-awesome.css",
          "../node_modules/silvermine-videojs-quality-selector/dist/css/quality-selector.css",
          "assets/videojs-contrib-ads.css",
          "styles.css"
      ],
      "scripts": [
          "../node_modules/jquery/dist/jquery.min.js",
          "../node_modules/bootstrap/dist/js/bootstrap.min.js",
          "../node_modules/video.js/dist/video.min.js",
          "../node_modules/videojs-flash/dist/videojs-flash.min.js",
          "../node_modules/videojs-ima/dist/videojs.ima.min.js",
          "../node_modules/videojs-contrib-hls/dist/videojs-contrib-hls.min.js",
          "../node_modules/silvermine-videojs-quality-selector/dist/js/silvermine-videojs-quality-selector.min.js",
          "assets/videojs-contrib-ads.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json"
    },
    {
      "project": "src/tsconfig.spec.json"
    },
    {
      "project": "e2e/tsconfig.e2e.json"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
